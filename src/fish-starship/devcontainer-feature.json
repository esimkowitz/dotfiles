{
    "id": "fish-starship",
    "version": "1.2.1",
    "name": "Fish Shell with Starship Prompt",
    "description": "Installs Fish shell and Starship prompt with a clean devcontainer configuration. Persists shell history across container rebuilds.",
    "options": {
        "fishGreeting": {
            "type": "string",
            "default": "Glub glub! \ud83d\udc1f \ud83d\udc20",
            "description": "Custom Fish shell greeting message"
        }
    },
    "mounts": [
        {
            "source": "fish-persistent-data-${devcontainerId}",
            "target": "/mnt/fish-persistent-data",
            "type": "volume"
        }
    ],
    "onCreateCommand": "/usr/local/share/fish-starship/onCreate.sh",
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "fish"
            }
        }
    }
}
